{
   "app": {
      "background": {
         "scripts": [ "main.bundle.js"]
      }
   },
   "description": "chrome-serialport",
   "externally_connectable": { //external apps that can communicate with apps
     "ids": [
      "*"
    ],
    "matches": [ //external websites that can communicate with apps
      "*://127.0.0.1/*"
    ]},
   "manifest_version": 2,
   "name": "chrome-serialport",
   "permissions": [ "serial" ],
   "update_url": "https://clients2.google.com/service/update2/crx",
   "version": "0.0.1"
}
